---
import Layout from "@/layouts/Layout.astro";
import { convertIconObjsToString } from "@/lib/utils";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const docsEntries = await getCollection('docs');
  return docsEntries.map((entry: CollectionEntry<"docs">) => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { headings, Content } = await entry.render();

const {data: frontmatter} = entry;

// Fix type mismatch for hero actions
if (frontmatter.hero?.actions) {
  frontmatter.hero.actions = convertIconObjsToString(frontmatter.hero?.actions);
}
---

<Layout frontmatter={frontmatter} headings={headings}>
  <Content />
</Layout>